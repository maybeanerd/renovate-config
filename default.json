{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",

    ":pinVersions",
    ":automergeMinor",
    ":rebaseStalePrs",

    "group:linters"
  ],
  "labels": ["dependencies"],
  "automergeStrategy": "fast-forward",
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/discordjs"],
      "groupName": "discord.js"
    }
  ]
}
